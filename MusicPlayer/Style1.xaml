<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="WhiteSmoke"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style x:Key="TS" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <ControlTemplate x:Key="ButtonsTemp" TargetType="Button">
        <Border Margin="0,0,0,0" CornerRadius="35" BorderThickness="2" Background="Transparent" Height="40" Width="40" BorderBrush="AntiqueWhite">
            <ContentControl Margin="5" HorizontalAlignment="Center" Foreground="AntiqueWhite" VerticalAlignment="Center"/>
        </Border>
    </ControlTemplate>
</ResourceDictionary>